{
  "name": "@arbenk/standards",
  "version": "0.1.0",
  "description": "Shared ESLint and Prettier standards for JavaScript and TypeScript projects.",
  "type": "module",
  "main": "./index.js",
  "exports": {
    ".": "./index.js",
    "./eslint": "./eslint.config.js",
    "./prettier": "./prettier.config.js",
    "./package.json": "./package.json"
  },
  "files": [
    "index.js",
    "eslint.config.js",
    "prettier.config.js",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "pack:dry": "npm pack --dry-run",
    "validate:root-export": "node -e \"import('./index.js').then((m)=>console.log(m.eslintConfig&&m.prettierConfig?'ok':'invalid')).catch(()=>process.exit(1))\"",
    "validate:eslint-export": "node -e \"import('./eslint.config.js').then((m)=>console.log(Array.isArray(m.default)?'ok':'invalid')).catch(()=>process.exit(1))\"",
    "validate:prettier-export": "node -e \"import('./prettier.config.js').then((m)=>console.log(m.default?'ok':'invalid')).catch(()=>process.exit(1))\""
  },
  "keywords": [
    "eslint",
    "prettier",
    "typescript",
    "standards",
    "config"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@eslint/js": "^9.36.0",
    "eslint": "^9.0.0",
    "globals": "^16.4.0",
    "prettier": "^3.0.0",
    "typescript": ">=5.0.0",
    "typescript-eslint": "^8.44.0"
  }
}
